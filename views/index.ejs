<link rel="stylesheet" type="text/css" rel="noopener" target="_blank" href="style.css">

<body>
    
    <div class="header">
        <h1 class="welcome">Welcome <%=username%>!!!</h1>
            <form class="logout" method = "post" action="/logout">
                <button class="logout" type="submit" id="Logout" >Logout User</button>
            </form>
            <form class="logout" method = "get" action="/changepassword">
                <button class="logout" type="submit" id="logout" >Change Password</button>
            </form>
            <form class="logout" method = "post" action="/showcart">
                <button class="logout" type="submit" id="logout" >My Cart</button>
            </form>
    </div>
        <% ecommerce.forEach(function(product_list){ %>
        <div class="card">
            <img class="img" src="/images/<%=product_list.image%>" style="width:100%">
            <h1><%=product_list.name%></h1>
            <p class="price">â‚¹<%=product_list.price%></p>
            <form method="post" action="/addtocart">
                <input type="hidden" name="image" value="<%=product_list.image%>">
                <input type="hidden" name="id" value="<%=product_list.product_id%>">
                <input type="hidden" name="name" value="<%=product_list.name%>">
                <input type="hidden" name="price" value="<%=product_list.price%>">
                <button type="submit" style="color : black" class="addtocartbutton" ><b>Add to Cart</b></button>
            </form>
            <button class="showmore">View Details</button>
            <div id="myModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <p>____Product Details____</p>
                    <p> Title: <%=product_list.name%></p>
                    <p> Brand: <%=product_list.brand%></p>
                    <p> Price: <%=product_list.price%></p>
                    <p> Description: <%=product_list.description%></p>
                    <p> Is-instock right now: Yes </p>
                 </div>
            </div>
    <% }) %>
    </div>
</body>
<script src="script.js"> </script>
    