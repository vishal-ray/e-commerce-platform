<link rel="stylesheet" type="text/css" rel="noopener" target="_blank" href="loginejsstyle.css">

<form method="post" action="/login" style="border:1px solid #ccc">
  <div class="container">
    <h1>Log In</h1>
    <p>Enter your details!!</p>
    <hr>

    <label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="username" required>

    <label for="password"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password" required>
    
    <% if(err){ %>
      <h4 style="color:red;"><%= err %></h4>
    <% } %>
    
    <label for="forgotpassword"><b><a href="https://ecommerce2-3p34g825jlml74tqtsz.codequotient.in/forgotpassword"> Forgot Password? </a></b></label>

    <label>
    	<p>Don't Have an account!</p>
		Click Here to <b><a href="/signup.html">SignUP!<b></a>
    </label>

    <div class="clearfix">
      <button type="submit" class="signupbtn">Log In</button>
    </div>
  </div>
</form>

