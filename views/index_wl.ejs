<link rel="stylesheet" type="text/css" rel="noopener" target="_blank" href="style.css">

<body>
    
    <div class="header">
        <h1 class="welcome">Welcome !!!</h1>
            <form class="logout" method = "post" action="/login">
                <button class="logout" type="submit" id="Logout" >Login</button>
            </form>
    </div>
        <% ecommerce.forEach(function(product_list){ %>
        <div class="card">
            <img class="img" src="/images/<%=product_list.image%>" style="width:100%">
            <h1><%=product_list.name%></h1>
            <p class="price">â‚¹<%=product_list.price%></p>
            <form method="post" action="/login">
                <button type="submit" style="color : black" ><b>Add to Cart</b></button>
            </form>
            <button class="showmore">View Details</button>
            <div id="myModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <p>____Product Details____</p>
                    <p> Title: <%=product_list.name%></p>
                    <p> Brand: <%=product_list.brand%></p>
                    <p> Price: <%=product_list.price%></p>
                    <p> Description: <%=product_list.description%></p>
                    <p> Is-instock right now: Yes </p>
                 </div>
            </div>
    <% }) %>
    </div>
</body>
